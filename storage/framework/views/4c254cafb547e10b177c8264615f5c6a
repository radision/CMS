<div class="row">
    <div class="col-xs-8">
        <p class="lead">
            <?php if(count($posts) == 0): ?>
                There are currently no blog posts.
            <?php else: ?>
                Here you may find our blog posts:
            <?php endif; ?>
        </p>
    </div>
    <?php if (\GrahamCampbell\Credentials\Facades\Credentials::check() && \GrahamCampbell\Credentials\Facades\Credentials::hasAccess('blog')): ?>
        <div class="col-xs-4">
            <div class="pull-right">
                <a class="btn btn-primary" href="<?php echo URL::route('blog.posts.create'); ?>"><i class="fa fa-book"></i> New Post</a>
            </div>
        </div>
    <?php endif; ?>
</div>
<?php foreach($posts as $post): ?>
    <h2><?php echo $post->title; ?></h2>
    <p>
        <strong><?php echo $post->summary; ?></strong>
    </p>
    <p>
        <a class="btn btn-success" href="<?php echo URL::route('blog.posts.show', array('posts' => $post->id)); ?>"><i class="fa fa-file-text"></i> Show Post</a>
        <?php if (\GrahamCampbell\Credentials\Facades\Credentials::check() && \GrahamCampbell\Credentials\Facades\Credentials::hasAccess('blog')): ?>
             <a class="btn btn-info" href="<?php echo URL::route('blog.posts.edit', array('posts' => $post->id)); ?>"><i class="fa fa-pencil-square-o"></i> Edit Post</a> <a class="btn btn-danger" href="#delete_post_<?php echo $post->id; ?>" data-toggle="modal" data-target="#delete_post_<?php echo $post->id; ?>"><i class="fa fa-times"></i> Delete Post</a>
        <?php endif; ?>
    </p>
    <br>
<?php endforeach; ?>
<?php echo $links; ?>

<?php $__env->stopSection(); ?>

<?php $__env->startSection('bottom'); ?>
<?php if (\GrahamCampbell\Credentials\Facades\Credentials::check() && \GrahamCampbell\Credentials\Facades\Credentials::hasAccess('blog')): ?>
